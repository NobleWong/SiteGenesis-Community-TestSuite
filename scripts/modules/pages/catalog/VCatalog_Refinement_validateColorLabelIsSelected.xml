<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Validate color is selected by label.</description>
  <parameter name="colorLabel" desc="color label"/>
  <command name="assertText" target="css=#main .breadcrumb .breadcrumb-refinement" value="regexpi:Color.*@{colorLabel}.*"/>
  <command name="assertElementPresent" target="css=#secondary .refinement .refinementColor li a[title*=@{colorLabel}]"/>
</scriptmodule>