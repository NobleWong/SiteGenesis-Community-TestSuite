<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="7">
  <description>Click add product to cart.</description>
  <parameter name="row"/>
  <command name="storeEval" target="@{row}+1" value="position"/>
  <command name="click" target="css=button[title=&quot;Add to Cart&quot;]"/>
  <command name="waitForVisible" target="xpath=//span[@class=&quot;minicart-quantity&quot; and text()=1]"/>
  <command name="mouseOver" target="css=div.mini-cart-total"/>
  <command name="waitForVisible" target="css=#mini-cart div.mini-cart-content"/>
</scriptmodule>